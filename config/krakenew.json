{
    "view engines": {
        "dust_compiled": {
            "module": "path:./templates/index",
            "renderer": "compiledDust",
            "name": "dust"
        },
        "dust_orig": {
            "module": "path:./templates/index",
            "renderer": "dust",
            "name": "dust"
        },
        "dust_stream": {
            "module": "path:./templates/index",
            "renderer": "streamedDust",
            "name": "dust"
        },
        "dust": {
            "module": "adaro",
            "rendererFactory": {
                "method": "dust",
                "arguments": [{ "cache": false }]
            }
        },
        "js": {
            "module": "adaro",
            "rendererFactory": {
                "method": "js",
                "arguments": [{ "cache": false }]
            }
        }
    },

    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "US-en",
        "templatePath": "path:./bin/views"
    },

    "middleware": {
        "favicon": {
            "enabled": false
        },
        "compress": {
            "enabled": false
        },
        "shutdown": {
            "module": "kraken.next/middleware/shutdown"
        },
        "multipart": {
            "module": "kraken.next/middleware/multipart"
        }
    },

    "express": {
        "view engine": "js",
        "view cache": true,
        "views": "path:./bin/views"
    }
}